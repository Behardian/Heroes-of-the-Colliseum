@model IEnumerable<HeroesOfTheColliseumMvc.Models.Hero>
@{
    ViewBag.Title = "Heroes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover characterTable">
    <thead>
    <tr>
        <th></th>
        <th>Name</th>
        <th>Attack</th>
        <th>Defence</th>
        <th>Critical</th>
        <th>Hit Points</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var hero in Model)
        {
            <tr>
                <td><img src="@hero.ImageUrl" alt="Image" class="portrait"/></td>
                <td>@Html.ActionLink(hero.Name, "HeroDetails", "Heroes", new {id= hero.Id}, null)</td>
                <td>@hero.Attack</td>
                <td>@hero.Defence</td>
                <td>@hero.CritDam</td>
                <td>@hero.HitPoints</td>
            </tr>
        }
    </tbody>
</table>
