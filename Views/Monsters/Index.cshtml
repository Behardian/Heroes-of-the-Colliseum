@model IEnumerable<HeroesOfTheColliseumMvc.Models.Monster>
@{
    ViewBag.Title = "Monsters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover characterTable">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Attack</th>
            <th>Defence</th>
            <th>Critical</th>
            <th>Hit Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var monster in Model)
        {
            <tr>
                <td><img src="@monster.ImageUrl" alt="Image" class="portrait"/></td>
                <td>@Html.ActionLink(monster.Name, "MonsterDetails", "Monsters", new {id = monster.Id }, null)</td>
                <td>@monster.Attack</td>
                <td>@monster.Defence</td>
                <td>@monster.CritDam</td>
                <td>@monster.HitPoints</td>
            </tr>
        }
    </tbody>
</table>
